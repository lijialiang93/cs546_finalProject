<div class="header clearfix">
  <h3 class="text"> {{quiz.name}}</h3>
  <span class="text-right">{{studentInfo.studentName}}</span>
  <p class="text-right">prevScore:{{prevScore}}</p>
  <p class="text-right">totalScore:{{quiz.totalScore}}</p>
</div>
<form method="post" id="gradeForm" action="grading?quizId={{quiz._id}}&studentId={{studentInfo.studentId}}">
  <ol>

    {{#each qaList}}
    <div class="row">
      <h4 class="text">
        <li>{{question}}</h4>
      <textarea readonly rows="4" cols="50" placeholder={{answer.answer}}></textarea>
      <hr class="style1">
      </li>
    </div>
    {{/each}}
  </ol>
  <div class="form-group hidden" id="error-container">
    <div class="alert alert-danger" id="score-alert"></div>
  </div>
  <label for="score">Score</label>
  <input class="text" name="score" id="score"></input>

  <button type="submit" class="btn btn-success" style="float: right">Grade</button>
</form>